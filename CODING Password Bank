package selfPogramming;
import java.util.Scanner;
public class PasswordBank {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
			
	Scanner x = new Scanner(System.in);
			
			for(int i=2;i>=0;i--) {
				System.out.print("Enter account password: ");
				int p =x.nextInt();
				int pass = 4500;

				if(p==pass) {
				System.out.println("Password CORRECT.");

				break;

				}else

				System.out.print("Password WRONG ! You have "+i+" chance. Please enter again: ");

				System.out.println();

				if(i==0) {
				System.out.print("Wait 5 minutes to key in your password again!");
				
		}
			}
		}
	}
